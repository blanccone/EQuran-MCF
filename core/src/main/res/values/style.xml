<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="MainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="roundedImageHeader" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>

    <style name="MainTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextAppearance">@style/TextLabel</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="helperTextTextAppearance">@style/HelperLabel</item>
        <item name="boxBackgroundMode">none</item>
        <item name="errorTextAppearance">@style/TextErrorLabel</item>
    </style>

    <style name="MainEditText">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:padding">16dp</item>
        <item name="drawableTint">@color/color_hint</item>
    </style>

    <style name="TextLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_background</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HelperLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_background</item>
    </style>

    <style name="TextErrorLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/img_shapeable_background_top_corner</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="theme">@style/MainTheme</item>
        <item name="bottomSheetStyle">@style/ModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
    </style>

    <style name="RoundedAlertDialog" parent="MaterialAlertDialogRounded">
        <item name="android:windowBackground">@drawable/img_shapeable_background</item>
        <item name="android:theme">@style/MainTheme.NoActionBar</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>
</resources>